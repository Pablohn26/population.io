.container
  .birthdays-area
    header
      h1 Did you know that you share a birthday with about <i ng-bind-html="birthdayShare"></i>
    h2.continental Continental<br/>statistics
    h2.world Top birthday<br/>countries
    birthdays-chart(continents-data="continentsData", world-data="worldData")
    .continents
      span Birthdays in:
      .toggle()
        label(ng-model="selectedContinental" btn-radio="'Asia'") Asia
        label(ng-model="selectedContinental" btn-radio="'Europe'") Europe
        label(ng-model="selectedContinental" btn-radio="'Africa'") Africa
        label(ng-model="selectedContinental" btn-radio="'North America'") North America
        label(ng-model="selectedContinental" btn-radio="'South America'") South America
        label(ng-model="selectedContinental" btn-radio="'Oceania'") Oceania
